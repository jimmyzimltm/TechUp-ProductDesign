        <!-- This is where we park the buttons every time -->
        <div class="process-menu-container" id="processmenu">
         <!-- Setup button options --> 
        <H4>What do you wish to do next?</H4>
         <table>
            <TR>
                <TD><a onClick="buildPaperProto()" class="button" role="button" id="buildpaperButton">Build paper prototype (1 day)</a></TD>
                <TD>Build figma prototype</TD>
                <TD>Build clickable prototype</TD>
                <TD>Build MVP web app</TD>
            </TR>
            <TR>
                <TD><a onClick="interviewPolicyOwner()" class="button" role="button" id="policyownerButton">Interview policy owner (1 day)</a></TD>
                <TD><a onClick="interviewGroundDivision()" class="button" role="button" id="grounddivisionButton">Interview ground division (1 day)</a></TD>
                <TD>Conduct FGDs with Customers</TD>
